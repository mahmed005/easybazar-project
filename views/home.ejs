    <div class="main-container">
    <% for(let i=0 ; i< categories.length ; i++) {%>
      <div class="container">
        <span class="c-name" data-cname="<%= categories[i].cat_id%>">
          <%= categories[i].name%>
        </span>
        <div class="products-container">
          <% for(let j = 0; j < categories[i].products.length ; j++) {%>
          <div class="product" data-pid="<%=categories[i].products[j].p_id%>">
            <img class="p-img" src="<%= categories[i].products[j].pic_path%>" alt="">
            <p class="p-name"><%= categories[i].products[j].p_name%></p>
          </div>
          <% }%>
        </div>
      </div>

      <% }%>
    </div>
  </main>

  <script>
    let categorySpan = document.querySelectorAll(".c-name");
    categorySpan.forEach(span => {
      span.addEventListener("click" , () => {
        window.location.href = `/products?category=${span.dataset.cname}`;
      })
    });
  </script>
