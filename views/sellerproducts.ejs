<%- include("header") %>
<%  additionalCss=['/styles/sellerandadminstyles.css']; %>

    <main>
        <div class="main-content">
            <div class="sidebar">
                <h3>Menu</h3>
                <ul>
                    <li><a href="in">Home</a></li>
                    <li><a href="/sellerorders">Orders</a></li>
                    <li><a class="active" href="product.html">Product</a></li>
                    <li><a href="category.html">Category</a></li>
                    <li><a href="/stock">Stock</a></li>

                </ul>
            </div>
            <div class="content">
                <h3>Product</h3>
                <div class="content-data">
                    <div class="content-form">
                        <form action="/productsadd" method="post" enctype="multipart/form-data">
                            <h4>Add Product</h4>
                            <div class="form-inline">
                                <input type="hidden" name="sid" id="sid">
                                <div class="form-group">
                                    <label>Product Name</label>
                                    <input type="text" name="pname">
                                </div>
                                <div class="form-group">
                                    <label>Price</label>
                                    <input type="text" name="price">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Stock</label>
                                <input type="text" name="stock">
                            </div>
                            <div class="form-group">
                                <label>Long Description</label>
                                <textarea style="resize:none" name="desc" rows="3"></textarea>
                            </div>
                            <div class="form-inline">
                                <div class="form-group">
                                    <label>Category</label>
                                    <select name="category" id="categorySelect">
                                        
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Images</label>
                                    <input type="file" name="picture">
                                </div>
                            </div>
                            <div class="form-group">
                                <label></label>
                                <input type="submit" name="addProduct" value="Add Product">
                            </div>
                        </form>
                    </div>
                    <div class="content-detail">
                        <h4>All Products</h4>
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Category</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody id="js-table">
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </main> <!-- Main Area -->

    <script src="/scripts/sellerproducts.js"></script>
    <%- include("footer") %>